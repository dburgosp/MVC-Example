<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <FrameLayout
        android:id="@+id/toolbar_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <ImageButton
            android:id="@+id/toolbar_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            android:padding="16dp"
            android:src="@drawable/baseline_arrow_back_white_24"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/toolbar_hamburger_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            android:padding="16dp"
            android:src="@drawable/baseline_menu_black_24"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/toolbar_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/toolbar_buttons"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        tools:text="@string/app_name" />
</RelativeLayout>